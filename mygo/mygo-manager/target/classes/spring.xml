		<property name="maxActive" value="${shopping.jdbc.maxActive}"></property>
		<!-- è¿žæŽ¥æ± æœ€å¤§ç©ºé—?-->
		<property name="maxIdle" value="${shopping.jdbc.maxIdle}"></property>
		<!-- è¿žæŽ¥æ± æœ€å°ç©ºé—?-->
		<property name="minIdle" value="${shopping.jdbc.minIdle}"></property>
		<!-- èŽ·å–è¿žæŽ¥æœ?¤§ç­‰å¾…æ—¶é—´ -->
		<property name="maxWait" value="${shopping.jdbc.maxWait}"></property>
