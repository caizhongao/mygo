<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cza.mapper.order.OrderMapper">
	<resultMap id="order" type="com.cza.dto.order.TOrder">
		<result property="oid" column="oid"/>
		<result property="uid" column="uid"/>
		<result property="province" column="province"/>
		<result property="area" column="area"/>
		<result property="city" column="city"/>
		<result property="addr" column="addr"/>
		<result property="receiver" column="receiver"/>
		<result property="mobilphone" column="mobilphone"/>
		<result property="sid" column="sid"/>
		<result property="goodsName" column="goods_name"/>
		<result property="orderPrice" column="order_price"/>
		<result property="amount" column="amount"/>
		<result property="number" column="number"/>
		<result property="payStatus" column="pay_status"/>
		<result property="status" column="status"/>
		<result property="deleteDesc" column="delete_desc"/>
		<result property="payNo" column="pay_no"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="orderVersion" column="order_version"/>
		<result property="gid" column="gid"/>
	</resultMap>
	
	<sql id="allColumns">
			oid,uid,province,area,city,addr,receiver,mobilphone,sid,goods_name,order_price,amount,number,pay_status,status,delete_desc,pay_no,create_time,update_time,order_version,gid
	</sql>
	
	
	<select id="countOrder" parameterType="com.cza.dto.order.TOrder" resultType="java.lang.Long">
		select count(oid)
		from t_order 
			<where>
				<if test="oid!=null">
					and oid like CONCAT(CONCAT('%',#{oid}),'%')
				</if>
				<if test="uid!=null">
					and uid = #{uid}
				</if>
				<if test="goodsName!=null and goodsName!=''">
					and goods_name like CONCAT(CONCAT('%',#{goodsName}),'%')
				</if>
				<if test="sid!=null">
					and sid=#{sid}
				</if>
				<if test="payStatus!=null">
					and pay_status=#{payStatus}
				</if>
				<if test="status!=null">
					and status=#{status}
				</if>
			</where>
	</select>
	
	
	<select id="listOrderIds" parameterType="com.cza.dto.order.TOrder" resultType="java.lang.Long">
		select 
			oid
		from t_order 
			<where>
				<if test="uid!=null">
					and uid = #{uid}
				</if>
				<if test="sid!=null">
					and sid=#{sid}
				</if>
				<if test="payStatus!=null">
					and pay_status=#{payStatus}
				</if>
				<if test="status!=null">
					and status=#{status}
				</if>
				<if test="createTime!=null">
					and create_time &lt; #{createTime}
				</if>
			</where>
			limit #{start},#{pageSize}
			
	</select>
	
	<select id="listOrder" parameterType="com.cza.dto.order.TOrder" resultMap="order">
		select 
		<include refid="allColumns"></include>
		from t_order 
			<where>
				<if test="oid!=null">
					and oid like CONCAT(CONCAT('%',#{oid}),'%')
				</if>
				<if test="uid!=null">
					and uid = #{uid}
				</if>
				<if test="goodsName!=null and goodsName!=''">
					and goods_name like CONCAT(CONCAT('%',#{goodsName}),'%')
				</if>
				<if test="sid!=null">
					and sid=#{sid}
				</if>
				<if test="payStatus!=null">
					and pay_status=#{payStatus}
				</if>
				<if test="status!=null">
					and status=#{status}
				</if>
				<if test="createTime!=null">
					and create_time &lt; #{createTime}
				</if>
			</where>
			order by create_time desc
			limit #{start},#{pageSize}
			
	</select>
	<insert id="saveOrder" parameterType="com.cza.dto.order.TOrder">
			insert into t_order (
				oid,uid,province,area,city,addr,receiver,mobilphone,sid,goods_name,
				order_price,amount,number,create_time,update_time,order_version,gid
			)
			values (
				#{oid},#{uid},#{province},#{area},#{city},#{addr},#{receiver},#{mobilphone},#{sid},#{goodsName},
				#{orderPrice},#{amount},#{number},#{createTime},${updateTime},${orderVersion},${gid}
			)
	</insert>	
	
	
	<select id="queryOrder" parameterType="java.lang.Long" resultMap="order">
		select 
			<include refid="allColumns"></include>
		from t_order 
			where oid = #{oid} 
	</select>
	
	<update id="updateOrder" parameterType="com.cza.dto.order.TOrder">
		update t_order
		<set>
				<if test="payStatus!=null">
					pay_status=#{payStatus},
				</if>
				<if test="status!=null">
					status=#{status},
				</if>
				<if test="deleteDesc!=null and deleteDesc!=''">
					delete_desc=#{deleteDesc},
				</if>
				<if test="payNo!=null and payNo!=''">
					pay_no=#{payNo},
				</if>
				<if test="orderVersion!=null">
					order_version = #{orderVersion},
				</if>
		</set>
		<where> 
			oid = #{oid}
			<if test="orderVersion!=null">
				and order_version &lt; #{orderVersion}
			</if>
		</where>
	</update>
	
	
		
</mapper>